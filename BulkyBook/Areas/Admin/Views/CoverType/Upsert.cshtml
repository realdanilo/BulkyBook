@model BulkyBook.Models.CoverType;
@{
	ViewData["Title"] = "Upsert";
	Layout = "~/Views/Shared/_Layout.cshtml";
	var title = "Create Cover Type";
}



<form method="post">
	<div class="row p-3 border">
		<span asp-validation-summary="ModelOnly" class="text-danger"></span>

		@if (Model.Id != 0)
		{
			title = "Edit Cover Type";
		}

		<div class="col-12 border-bottom">
			<h2 class="text-primary">@title</h2>
		</div>
		<div class="col-8 pt-4">
			<div class="form-group row">
				<div class="col-4">
					@*Displays data anotation from model*@
					<label asp-for="Name"></label>
				</div>
				<div class="col-8">
					<input asp-for="Name" class="form-control" />
					@*Gets validation from model*@
					<span asp-validation-for="Name" class="text-danger"></span>
				</div>
				<div class="form-group row">
					<div class="col-12 offset-4">
						@if (Model.Id != 0)
						{
							@*For Edit partial view, we need to pass a model, to get id*@
							<partial name="_EditAndBackToListButton" model="Model.Id" />
						}
						else
						{
							<partial name="_CreateAndBackToListButton" />

						}
					</div>
				</div>


			</div>
		</div>
	</div>
</form>
@*client side validation*@
@section Scripts{
	<partial name="_ValidationScriptsPartial" />
}